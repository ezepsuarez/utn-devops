pipeline {
    agent any

    stages {
        stage('Prepare') {
            steps {
                sh 'git clone https://github.com/prooph/laravel-example.git || true'
                sh 'cd laravel-example && sudo git checkout master'
                sh 'cd laravel-example && sudo /usr/local/bin/composer install --no-scripts'
                sh 'sudo chmod 777 ./laravel-example/bootstrap/cache/'
            }
        }
        stage('Build') {
            steps {
                sh 'find . -path ./laravel-example/vendor -prune -o -name \\*.php -exec php -l "{}" \\;'
                retry(2) {
                    sh 'cd laravel-example && sudo /usr/local/bin/composer update --no-scripts --prefer-dist'
                }
            }
        }
        stage('Test') {
            steps {
                sh './laravel-example/vendor/bin/phpunit -c ./laravel-example/phpunit.xml'
            }
        }
    }
}
